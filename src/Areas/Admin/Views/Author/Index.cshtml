@model IEnumerable<Book_Store.Models.DomainModels.Author>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{ 
  ViewData["Title"] = " | Manage Authors";
}

<h1 class="mb-2">@localizer["Mangage Authors"]</h1>
<ul class="list-group">
  <li class="list-group-item">
    <h5 class="mt-1"><a asp-controller="Author" asp-action="Add">@localizer["Add new author"]</a></h5>
  </li>
  <li class="list-group-item">
    <form asp-controller="Author" asp-action="Select" method="post" class="form-inline">
      <h5 class="mt-1 mr-5">@localizer["Select an Author"]</h5>
      <select name="id" class="form-control ml-2 mr-2"
              asp-items='@(new SelectList(Model, "AuthorId", "FullName"))'></select>
      <input type="submit" name="Operation" value=@(localizer["Books"].Value) class="btn btn-primary ml-2 mr-2" />
      <input type="submit" name="Operation" value=@(localizer["Edit"].Value) class="btn btn-primary ml-2 mr-2" />
      <input type="submit" name="Operation" value=@(localizer["Delete"].Value) class="btn btn-primary ml-2 mr-2" />
    </form>
  </li>
</ul>
